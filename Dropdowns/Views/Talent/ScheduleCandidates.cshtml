@model ExpirisTechnicalTest.Models.CandidatesModel
@{
    ViewBag.Title = "ScheduleCandidates";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="panel panel-default">
            <div class="panel-body">

                <h3 class="text-center">Candidatos</h3>

                @using (Html.BeginForm("CandidateSelected", "Talent", FormMethod.Post, new { role = "form" }))
                {
                    <div class="col-sm-4 col-sm-offset-4">
                        <h1>Buscador de Talento </h1>
                        <div class="panel panel-default">
                            <div class="panel-body">   
                                <div class="form-group">
                                    <h3>Agenda</h3>
                                </div>
                                <button type="submit" class="btn btn-primary">Agregar cita</button>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


