@model ExpirisTechnicalTest.Models.CandidatesModel
@{
    ViewBag.Title = "CandidateSelected";
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <h2>Resultado de la busqueda </h2>
        <div class="panel panel-default">
            <div class="panel-body">

                <h3 class="text-center">Candidatos</h3>

                @using (Html.BeginForm("CandidateSelected", "Talent", FormMethod.Post, new { role = "form" }))
                {
                <div class="form-group">
                    <table class="table table-bordered">
                        <tr>
                            <td>  ID  </td>
                            <td>  NOMBRE  </td>
                            <td>  CORREO  </td>
                            <td>  DIRECCIÓN  </td>
                            <td>  CIUDAD  </td>
                            <td>  ZIPCODE </td>
                            <td>  GEO  </td>
                            <td>  AGREGAR  </td>
                        </tr>

                        @for (int i = 0; i < Model.ArrayCandidates.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.Label(Model.ArrayCandidates[i].id.ToString())
                                </td>
                                <td>
                                    @Html.Label(Model.ArrayCandidates[i].name)
                                </td>
                                <td>
                                    @Html.Label(Model.ArrayCandidates[i].email)
                                </td>
                                <td>
                                    stret: @Html.Label(Model.ArrayCandidates[i].address.street) suite: @Html.Label(Model.ArrayCandidates[i].address.suite)
                                </td>
                                <td>
                                    @Html.Label(Model.ArrayCandidates[i].address.city)
                                </td>
                                <td>
                                    @Html.Label(Model.ArrayCandidates[i].address.zipcode)
                                </td>
                                <td>
                                    lat- @Html.Label(Model.ArrayCandidates[i].address.geo.lat) lng- @Html.Label(Model.ArrayCandidates[i].address.geo.lng)
                                </td>
                                <td>
                                    <input type="checkbox" />
                                </td>
                            </tr>
                        }
                    </table>
                    <button type="submit" class="btn btn-primary">Ver lista de usuarios</button>
                </div>
                }

            </div>
        </div>
    </div>
</div>

