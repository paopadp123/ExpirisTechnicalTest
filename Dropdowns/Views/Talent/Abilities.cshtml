@model List<ExpirisTechnicalTest.Models.AbilitiesModel>
@{
    ViewBag.Title = "Abilities";
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <h1>Buscador de Talento </h1>
        <div class="panel panel-default">
            <div class="panel-body">

                <h3 class="text-center">Tecnología</h3>
                <p>Seleccione la habilidad que necesita del aspirante </p>

                    @using (Html.BeginForm("Abilities", "Talent", FormMethod.Post,  new { role = "form" }))
                    {  
                        <div class="form-group">         
                            <table>

                                @for (int i = 0; i < Model.Count(); i++)
                                {
                                    <tr>
                                        <td>
                                            @Html.CheckBoxFor(m => m[i].IsCheck)
                                            @Html.HiddenFor(m => m[i].Id)
                                            @Model[i].Ability
                                        </td>
                                      
                                    </tr>
                                }
                            </table>    
                        </div>
                        <button type="submit" class="btn btn-primary">Ver lista de usuarios</button>
                    }

            </div>
        </div>
    </div>
</div>

